{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "plugin": ["oh-my-opencode", "opencode-handoff"],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "obsidian": {
      "type": "local",
      "command": [
        "npx",
        "@mauricio.wolff/mcp-obsidian@latest",
        "/Users/okwasniewski/Personal"
      ],
      "enabled": true
    }
  },
  "permission": {
    "bash": {
      "git push": "ask"
    },
    "doom_loop": "ask"
  }
}
