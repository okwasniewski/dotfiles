{
  "autoUpdatesChannel": "latest",
  "plansDirectory": ".agent/plans",
  "env": {
    "DISABLE_ZOXIDE": "1"
  },
  "permissions": {
    "ask": [
      "Bash(git push*)"
    ]
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/dotfiles/.claude/hooks/notification.sh"
          }
        ]
      }
    ]
  }
}
